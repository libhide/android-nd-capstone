<resources>

    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/TodoneButton</item>
    </style>

    <style name="TodoneButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">@dimen/todone_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/todone_button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/todone_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/todone_button_vertical_padding</item>
    </style>

    <style name="LetterSpacedTextView" parent="@android:style/TextAppearance.Widget.TextView"></style>

    <style name="AddMoreBorderLessButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#96ffffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
