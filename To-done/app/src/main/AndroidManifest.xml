<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ratik.todone">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".TodoneApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.InitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ListInputActivity"
            android:label="@string/title_activity_list_input"
            android:parentActivityName=".ui.InitActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ratik.todone.ui.InitActivity" />
        </activity>
        <activity android:name=".ui.MainActivity" />

        <provider
            android:name=".provider.TodoProvider"
            android:authorities="com.ratik.todone.provider"
            android:exported="false" />

        <receiver android:name=".receiver.TimeOverReceiver" />
        <receiver android:name=".receiver.RebootReceiver" />
    </application>

</manifest>